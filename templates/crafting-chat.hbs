<div class="beavers-crafting chat flexcol">
    <div class="flexrow header">
        <div class="image" style="background-image: url('{{data.img}}')"></div>
        <div style="flex:1"> {{data.name}}</div>
        <div class="flexrow" style="flex:0 0 60px;height:30px">
            <div class="dice-roll">
                <div class="dice-total flexrow" style="flex:1;padding:2px;margin-top:5px">
                    <span class="total">{{data.skill.total}}</span>
                    {{#if data.success}}
                        <i class="fas fa-check" style="color:#468847"></i>
                    {{else}}
                        <i class="fas fa-times" style="color:#b94a48"></i>
                    {{/if}}
                </div>
            </div>

        </div>

    </div>
    <div class="flexrow">
        <div class="left dnd5e">
            <div class="items-list">
                {{#each data.input.required}}
                    <div class="flexrow item" style="background: rgba(0,0,0,0.025)">
                        <div class="item-name flexrow" style="flex:1" title="{{this.component.name}}">
                            <div class="item-image"
                                 style="background-image: url('{{this.component.img}}')"></div>
                            <h4>{{this.component.quantity}} {{this.component.name}}</h4>
                        </div>
                        <div class="action" style="flex:0 0 10px;padding:0px 5px">
                            {{#if this.isAvailable }}
                                <i class="fas fa-check"></i>
                            {{else}}
                                <i class="fas fa-times"></i>
                            {{/if}}
                        </div>
                    </div>
                {{/each}}
                {{#each data.input.consumed}}
                    <div class="flexrow item">
                        <div class="item-name flexrow" style="flex:1" title="{{this.component.name}}">
                            <div class="item-image"
                                 style="background-image: url('{{this.component.img}}')"></div>
                            <h4>{{this.component.quantity}} {{this.component.name}}</h4>
                        </div>
                        <div class="action" style="flex:0 0 10px;padding:0px 5px">
                            {{#if this.isAvailable }}
                                <i class="fas fa-check"></i>
                            {{else}}
                                <i class="fas fa-times"></i>
                            {{/if}}
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
        <div class="right">
            <div class="results items-list">
                <div class="title">
                    <div class="name">{{localize "beaversCrafting.recipe.results"}}</div>
                </div>
                {{#each data.output}}
                    <div class="flexrow item">
                        <div class="item-name flexrow" style="flex:1" title="{{this.name}}">
                            <div class="item-image"
                                 style="background-image: url('{{this.img}}')"></div>
                            <h4>{{this.quantity}} {{this.name}}</h4>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<div class="beavers-crafting chat flexcol">
    <div class="flexrow header">
        <div class="image" style="background-image: url('{{data.img}}')"></div>
        <div style="flex:1"> {{data.title}}</div>
        <div class="flexcol" style="justify-content: center;flex:0 0 80px;font-weight:100">
            <div class="flexrow"
                 style="flex:0 0 auto;display: flex;flex-direction: row;flex-wrap: wrap;justify-content: flex-start; ">
                <div class="flexrow" style="margin:auto">
                    {{#if (not (eq data.status "error"))}}
                        <div style="line-height:14px;text-align:center;width:100%;height:18px;margin:1px; padding:2px;
                                border-radius:5px; border:1px solid darkgreen;">
                            <div style="text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;color:white;width:100%;height:100%;background: linear-gradient(to right, darkgreen {{data.tests.hitPer}}%, transparent 0);">{{data.tests.hitPer}}
                                %
                            </div>
                        </div>
                    {{/if}}
                    {{#if (not (eq data.status "success"))}}
                        <div style="line-height:14px;text-align:center;width:100%;height:18px;margin:1px; padding:2px; border-radius:5px;border:1px solid darkred;">
                            <div style="text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;color:white;width:100%;height:100%;background: linear-gradient(to right, darkred {{data.tests.failPer}}%, transparent 0)">{{data.tests.failPer}}
                                %
                            </div>
                        </div>
                    {{/if}}
                </div>
                <div style="flex:0;margin:auto 5px">
                    {{#if (eq data.status "active") }}
                        <i class="fas fa-forward-step" style="width:13px; text-align:center;"></i>
                    {{else if (eq data.status "success") }}
                        <i class="fas fa-check" style="width:13px; text-align:center;color:darkgreen"></i>
                    {{else if (eq data.status "error") }}
                        <i class="fas fa-times" style="width:13px; text-align:center;color:darkred"></i>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    <div class="flexrow">
        <div class="left flexcol">
            {{#each data.components}}
                {{#if (eq type "required")}}
                    <div class="flexrow" style="flex:0; background: rgba(0,0,0,0.025)">
                        <div class="crafting-item-img"
                             style="flex:0 0 auto;margin: 0 5px 0 0px;background-image: url('{{this.component.img}}')"
                             data-id="{{this.component.uuid}}"></div>
                        <span style="line-height:20px;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">{{this.component.name}}</span>

                        <div class="action" style="flex:0 0 10px;padding:0px 5px">
                            {{#if this.hasError }}
                                <i class="fas fa-times"></i>
                            {{else}}
                                <i class="fas fa-check"></i>
                            {{/if}}
                        </div>
                    </div>
                {{/if}}
            {{/each}}
            {{#each data.components}}
                {{#if (eq type "consumed")}}
                    <div class="flexrow" style="flex:0;">
                        <div class="crafting-item-img"
                             style="flex:0 0 auto;margin: 0 5px 0 0px;background-image: url('{{this.component.img}}')"
                             data-id="{{this.component.uuid}}"></div>
                        <span style="line-height:20px;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">{{this.component.quantity}} {{this.component.name}}</span>

                        <div class="action" style="flex:0 0 10px;padding:0px 5px">
                            {{#if this.hasError }}
                                <i class="fas fa-times"></i>
                            {{else}}
                                <i class="fas fa-check"></i>
                            {{/if}}
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        </div>
        <div class="right flexcol">
            <div class="results">
                <div class="title">
                    <div class="name">{{localize "beaversCrafting.recipe.results"}}</div>
                </div>
            </div>
            {{#each data.components}}
                {{#if (eq type "produced")}}
                    <div class="flexrow" style="flex:0;">
                        <div class="flexrow">
                            <div class="crafting-item-img"
                                 style="flex:0 0 auto;margin: 0 5px 0 0px;background-image: url('{{this.component.img}}')"
                                 data-id="{{this.component.uuid}}"></div>
                            <span style="line-height:20px;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">{{this.component.quantity}} {{this.component.name}}</span>
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

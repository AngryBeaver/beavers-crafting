<form class="items-list" autocomplete="off">
    <div class="flexrow">
        {{localize "beaversCrafting.tool-config.warn"}}
    </div>
    {{#each tools}}
        <div class="flexrow item">
            <div class="item-name flexrow clickable" data-id="{{this.uuid}}">
                <div class="item-image" style="background-image: url('{{this.img}}')"></div>
                <span>{{this.name}}</span>
            </div>
            <div class="action">
                <a class="item-delete">
                    <i class="fas fa-trash" data-id="{{@key}}"></i>
                </a>
            </div>
        </div>
    {{/each}}
    <div class="flexrow item">
        <div class="drop-area">{{localize "beaversCrafting.tool-config.dropItem"}}</div>
    </div>
</form>
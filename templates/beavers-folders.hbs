<div class="beavers-folder">
  {{#each folders}}
    {{#if (eq @key '')}}
      {{#each this}}
        <div class="flexrow">
          <span style="flex:0" class="flexcol">
                     <span class="border top"></span>
            {{#if (and @../last @last)}}<span></span>{{else}}<span class="border"></span>{{/if}}
          </span>
          <div class="flexcol">
            {{#if (eq ../../renderTemplate "beavers-actor-folder-item")}}
              {{> beavers-actor-folder-item this selected=../../selected}}
            {{else}}
              {{> beavers-recipe-folder-item this selected=../../selected}}
            {{/if}}
            {{#if (not @last)}}
              <div class="beavers-seperator"></div>
            {{/if}}
          </div>
        </div>
      {{/each}}
    {{else}}
      <div class="folder open">
        <div class="flexrow folderName">
                 <span style="flex:0" class="flexcol">
                     <span class="border top"></span>
                   {{#if @last}}<span></span>{{else}}<span class="border"></span>{{/if}}
                 </span>
          <a class="flexrow">
            <i style="flex:0;margin:5px" class="fas fa-folder-open fa-fw"></i>
            <i style="flex:0;margin:5px" class="fas fa-folder fa-fw"></i>
            {{@key}}
          </a>
        </div>
        <div class="folderContent" {{#if @last}}style="border-color:transparent"{{/if}}>
          {{>beavers-folders renderTemplate=../renderTemplate selected=../selected}}
        </div>
      </div>
    {{/if}}
  {{/each}}
</div>